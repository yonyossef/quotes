    "version": "0.2.0",
    "configurations": [
        {
            "type": "ruby_lsp",
            "request": "attach",
            "name": "Attach to a debugger"
        },
        {
            "name": "Debug Rails Server",
            "type": "ruby_lsp",
            "request": "launch",
            "program": "${workspaceFolder}/bin/rails server -p 5000"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://127.0.0.1:5000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}